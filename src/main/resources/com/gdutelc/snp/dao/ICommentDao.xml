<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdutelc.snp.dao.ICommentDao">

    <resultMap id="commentMap" type="com.gdutelc.snp.entity.Comment">
        <id property="cid" column="cid"/>
        <result property="aid" column="aid"/>
        <result property="uid" column="uid"/>
        <result property="comment" column="comment"/>
        <result property="time" column="time"/>
    </resultMap>
    <insert id="insertCommnet" parameterType="com.gdutelc.snp.entity.Comment">
        INSERT INTO db_sign_up.t_comment (aid, uid, comment, `time`)
        values (#{aid}, #{uid}, #{comment}, #{time})
    </insert>
    <select id="getCommentByAid" resultMap="commentMap" parameterType="java.lang.Integer">
        SELECT cid, aid, uid, comment, `time`
        FROM db_sign_up.t_comment
        WHERE aid = #{aid}
    </select>
    <select id="getCommentByUid" resultMap="commentMap" parameterType="java.lang.Integer">
        SELECT cid, aid, uid, comment, `time`
        FROM db_sign_up.t_comment
        WHERE uid = #{uid}
    </select>


</mapper>